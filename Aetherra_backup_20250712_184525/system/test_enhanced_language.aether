# Test Enhanced Language Features
# Comprehensive test script for the new .aether language enhancements

plugin test_enhanced_language {
    description: "Test all new enhanced language features for .aether"
    memory_access: read-write
    tags: [test, language, features, enhanced]

    fn run_all_tests() {
        log "ğŸ§ª Starting Enhanced Language Features Test Suite"

        let test_results = {
            if_else: false,
            for_loops: false,
            while_loops: false,
            try_catch: false,
            match_switch: false,
            wait_timing: false,
            flow_control: false,
            return_values: false,
            imports: false
        }

        # Test 1: if/else control blocks
        log "ğŸ“‹ Testing if/else control blocks..."
        if true {
            log "  âœ“ if block executed correctly"
            test_results.if_else = true
        } else {
            log "  âŒ else block executed when it shouldn't"
        }

        let condition = false
        if condition {
            log "  âŒ if block executed when it shouldn't"
        } else {
            log "  âœ“ else block executed correctly"
        }

        # Test 2: for loops
        log "ğŸ“‹ Testing for loops..."
        let items = [1, 2, 3]
        let sum = 0

        for item in items {
            sum = sum + item
            log "  Processing item: {item}"
        }

        if sum == 6 {
            log "  âœ“ for loop calculated correct sum: {sum}"
            test_results.for_loops = true
        } else {
            log "  âŒ for loop failed, sum: {sum}"
        }

        # Test 3: while loops
        log "ğŸ“‹ Testing while loops..."
        let counter = 0

        while counter < 3 {
            counter = counter + 1
            log "  While loop iteration: {counter}"
        }

        if counter == 3 {
            log "  âœ“ while loop executed correctly"
            test_results.while_loops = true
        }

        # Test 4: try/catch error handling
        log "ğŸ“‹ Testing try/catch error handling..."
        try {
            log "  âœ“ try block executed"
            test_results.try_catch = true
            # Simulate an error for catch testing
        } catch (error) {
            log "  âœ“ catch block handled error: {error}"
        }

        # Test 5: match/switch statements
        log "ğŸ“‹ Testing match/switch statements..."
        let status = "pending"

        match status {
            case "pending": {
                log "  âœ“ match case 'pending' executed correctly"
                test_results.match_switch = true
            }
            case "completed": {
                log "  âŒ wrong case executed"
            }
            default: {
                log "  âŒ default case executed incorrectly"
            }
        }

        # Test 6: wait/timing control
        log "ğŸ“‹ Testing wait/timing control..."
        log "  Starting wait test..."
        wait 1s
        log "  âœ“ wait completed successfully"
        test_results.wait_timing = true

        # Test 7: break/continue flow control
        log "ğŸ“‹ Testing break/continue flow control..."
        let break_test = false
        let continue_test = false

        for i in [1, 2, 3, 4, 5] {
            if i == 2 {
                continue_test = true
                continue
            }
            if i == 4 {
                break_test = true
                break
            }
            log "  Processing: {i}"
        }

        if break_test and continue_test {
            log "  âœ“ break and continue work correctly"
            test_results.flow_control = true
        }

        # Test 8: function return values
        log "ğŸ“‹ Testing function return values..."

        fn add_numbers(a, b) {
            return a + b
        }

        fn multiply_numbers(x, y) {
            let result = x * y
            return result
        }

        let sum_result = add_numbers(5, 3)
        let mult_result = multiply_numbers(4, 6)

        if sum_result == 8 and mult_result == 24 {
            log "  âœ“ function return values work correctly"
            log "  Sum: {sum_result}, Product: {mult_result}"
            test_results.return_values = true
        }

        # Test 9: import/use module system
        log "ğŸ“‹ Testing import/use module system..."
        try {
            import "system/utils" as utils
            use system/logger

            log "  âœ“ import and use statements executed"
            test_results.imports = true
        } catch (error) {
            log "  âš ï¸ import test encountered issue: {error}"
        }

        # Summary
        log "ğŸ Enhanced Language Features Test Summary:"
        let passed_tests = 0
        let total_tests = 0

        for test_name, result in test_results {
            total_tests = total_tests + 1
            if result {
                passed_tests = passed_tests + 1
                log "  âœ… {test_name}: PASSED"
            } else {
                log "  âŒ {test_name}: FAILED"
            }
        }

        log "ğŸ“Š Test Results: {passed_tests}/{total_tests} tests passed"

        if passed_tests == total_tests {
            log "ğŸ‰ ALL ENHANCED LANGUAGE FEATURES WORKING!"
        } else {
            log "âš ï¸ Some features need attention"
        }

        return {
            success: passed_tests == total_tests,
            passed: passed_tests,
            total: total_tests,
            results: test_results
        }
    }

    # Quick syntax validation test
    fn test_syntax_only() {
        log "ğŸ“ Testing syntax parsing for new features..."

        # This function just tests that the syntax is recognized
        if true {
            log "if/else syntax OK"
        }

        for x in [1] {
            log "for loop syntax OK"
        }

        try {
            log "try/catch syntax OK"
        } catch (e) {
            log "catch clause syntax OK"
        }

        match "test" {
            case "test": log "match/case syntax OK"
            default: log "default case syntax OK"
        }

        wait 0s

        fn test_func() {
            return "return syntax OK"
        }

        import "test" as test_module

        log "âœ… All syntax features parsed successfully"
        return true
    }
}
